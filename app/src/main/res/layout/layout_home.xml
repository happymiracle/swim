<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_content"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

    </android.support.v4.view.ViewPager>

    <View
        android:background="#E2E2E2"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:paddingTop="6dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_tab_natatoria"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/select_home_natatoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="场馆"
                android:textSize="15sp"
                android:textColor="@color/selector_home_text_color"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="6dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_tab_found"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/selector_home_found"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="发现"
                android:textSize="15sp"
                android:textColor="@color/selector_home_text_color"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="6dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_tab_me"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/selector_home_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="场馆"
                android:textSize="15sp"
                android:textColor="@color/selector_home_text_color"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="6dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>